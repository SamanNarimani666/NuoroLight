@model NuoroLight.Domain.ViewModels.Account.UserInformationViewModel
@using NuoroLight.Application.Extensions
<!-- User -->
<div class="user-box">
    <div class="user-img">
        <img src="@(!string.IsNullOrEmpty(Model.Avatar)?PathExtension.UserAvatarThumb+Model.Avatar:PathExtension.DefaultAvatar)" title="Mat Helme" class="img-circle img-thumbnail img-responsive">
        <div class="user-status offline"><i class="zmdi zmdi-dot-circle"></i></div>
    </div>
    <h5><a href="#">@User.Identity.Name</a> </h5>
    <ul class="list-inline">
        <li>
            <a asp-controller="Account" asp-action="Logout" asp-area="" class="text-custom">
                <i class="zmdi zmdi-power"></i>
            </a>
        </li>
    </ul>
</div>
<!-- End User -->