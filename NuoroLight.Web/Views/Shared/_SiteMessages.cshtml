@if (
TempData["SuccessMessage"] != null ||
TempData["ErrorMessage"] != null ||
TempData["InfoMessage"] != null ||
TempData["WarningMessage"] != null
)
{
    if (TempData["SuccessMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                swal("پیغام موفقیت!", "@TempData["SuccessMessage"]", "success");
            });
        </script>
    }

    if (TempData["ErrorMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                swal("پیغام خطا!", "@TempData["ErrorMessage"]", "error");
            });
        </script>
    }

    if (TempData["WarningMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                swal("پیغام اخطار!", "@TempData["WarningMessage"]", "warning");
            });
        </script>
    }

    if (TempData["InfoMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                swal("پیغام اطلاعیه!", "@TempData["ErrorMessage"]", "info");

            });
        </script>
    }
}

